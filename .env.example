# sanity (project [REDACTED] - Reiseblog)
NEXT_PUBLIC_SANITY_PROJECT_ID=[REDACTED]
NEXT_PUBLIC_SANITY_DATASET=production

# Required for draft mode, live content, and visual editing
# Prefer SANITY_API_READ_TOKEN (Viewer rights) for browser exposure
SANITY_API_READ_TOKEN=
# Fallback if SANITY_API_READ_TOKEN not set
SANITY_API_TOKEN=

# better auth + prisma
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_SECRET=
AUTH_DATABASE_URL="file:./prisma/dev.db"

# paid tier access (set in production)
# Code users enter to unlock subscriber-only posts
SUBSCRIBER_ACCESS_CODE=
# Optional comma-separated slug fallback for immediate post locking
# (used when a post is still marked as free in CMS data)
SUBSCRIBER_LOCKED_POST_SLUGS=northern-lights-tromso,dolomites-hiking,patagonia-wilderness

